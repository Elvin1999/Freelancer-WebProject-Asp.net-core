@model StepCourseProject.Areas.Client.Models.DoneProjectVM
@{
    ViewData["Title"] = "Projects";
}

    <section class="profile-account-setting" style="margin-top:-70px;">
        
            <div class="account-tabs-setting">
                <div class="acc-leftbar">
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-acc-tab" data-toggle="tab" href="#nav-acc" role="tab" aria-controls="nav-acc" aria-selected="true"><i class="fa fa-line-chart"></i>Done Projects</a>

                        <a class="nav-item nav-link" id="nav-status-tab" data-toggle="tab" href="#nav-status" role="tab" aria-controls="nav-status" aria-selected="false"><i class="fa fa-line-chart"></i>Projects without appeal</a>

                    </div>
                </div>
                    <div class="tab-content"  id="nav-tabContent">

                        <div class="tab-pane fade show active" id="nav-acc" role="tabpanel" aria-labelledby="nav-status-tab">
                            <div class="acc-setting" style="margin-top:50px;">
                                <h3 >Profile Status</h3>
                                <div class="profile-bx-details">
                                    <div class="row" style="display:flex;">
                                        @if (Model.DoneProjects.Any())
                                        {

                                            @foreach (var item in Model.DoneProjects)
                                            {

                                                <div class=" col-lg-6 col-md-12 col-sm-12 mt-4">
                                                    <div class="profile-bx-info">
                                                        <div class="pro-bx">
                                                            <img src="~/img/@item.AppUser.ImageUrl" alt="">
                                                            <div>
                                                                <h3 style="word-break:break-word;">@item.PostName</h3>
                                                                <h5>$@item.StartPrice - $@item.EndPrice</h5>
                                                            </div><!--bx-info end-->
                                                        </div><!--pro-bx end-->
                                                        <p>@item.PostDescription</p>
                                                    </div><!--profile-bx-info end-->
                                                </div>

                                            }
                                        }
                                        else
                                        {
                                            <h2>There is no projects,which is done</h2>
                                        }


                                    </div>
                                </div><!--profile-bx-details end-->
                                <div class="pro-work-status">
                                    <!-- <h4>Work Status  -  Last Months Working Status</h4> -->
                                </div><!--pro-work-status end-->
                            </div><!--acc-setting end-->
                        </div>
                        <div class="tab-pane fade" id="nav-status" role="tabpanel" aria-labelledby="nav-status-tab">
                            <div class="acc-setting" style="margin-top:50px;">
                                <h3>Profile Status</h3>
                                <div class="profile-bx-details">
                                    <div class="row">
                                        @if (Model.NotDoneProjects.Any())
                                        {

                                        @foreach (var item in Model.NotDoneProjects)
                                        {

                                        <div class=" col-lg-6 col-md-12 col-sm-12 mt-4">
                                            <div class="profile-bx-info">
                                                <div class="pro-bx">
                                                    <img src="~/img/@item.AppUser.ImageUrl" alt="">
                                                    <div>
                                                        <h3 style="word-break:break-word;">@item.PostName</h3>
                                                        <h5>$@item.StartPrice - $@item.EndPrice</h5>
                                                    </div><!--bx-info end-->
                                                </div><!--pro-bx end-->
                                                <p>@item.PostDescription</p>
                                            </div><!--profile-bx-info end-->
                                        </div>

                                        }
                                        }
                                        else
                                        {
                                            <h2>There is no projects,which is not appeal </h2>
                                        }
                                    </div>
                                </div><!--profile-bx-details end-->
                                <div class="pro-work-status">
                                    <!-- <h4>Work Status  -  Last Months Working Status</h4> -->
                                </div><!--pro-work-status end-->
                            </div><!--acc-setting end-->
                        </div>

                    </div>

               
            </div><!--account-tabs-setting end-->
      
    </section>